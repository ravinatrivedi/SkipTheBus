@model RideshareIdentityFramework.Models.Ride

@{
    ViewBag.Title = "Create";
    <link href="~/Content/post-a-ride.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="container register">
            <div class="row">
                <div class="col-md-3 register-left">
                    <h3>Welcome, @ViewBag.UserName</h3>
                </div>
                <div class="col-md-9 register-right">
                    @*<div class="tab-content" id="myTabContent">*@
                    <div class="show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Post a Ride</h3>
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.StartLocation, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter an origin *" } })
                                    @Html.ValidationMessageFor(model => model.StartLocation, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div id="flatpickrcontainer">
                                        @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control datepicker", placeholder = "Enter Start Date" } })
                                        @*<input type="text" id="start-time" placeholder="Enter Start Date" data-input />*@
                                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.PickUpLocation, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Pick up Location" } })
                                    @Html.ValidationMessageFor(model => model.PickUpLocation, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.SeatRemaining, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter of Seats" } })
                                    @Html.ValidationMessageFor(model => model.SeatRemaining, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.EndLocation, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter a destination *" } })
                                    @Html.ValidationMessageFor(model => model.EndLocation, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div id="flatpickrcontainer-end-date">
                                        @*<input type="text" id="end-time" placeholder="Enter End Date" data-input />*@
                                        @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control datepicker", placeholder = "Enter end date" } })
                                        @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.DropLocation, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Drop Location" } })
                                    @Html.ValidationMessageFor(model => model.DropLocation, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.FarePerSeat, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Fare per seat" } })
                                    @Html.ValidationMessageFor(model => model.FarePerSeat, "", new { @class = "text-danger" })
                                </div>
                                <input type="submit" class="btnRegister" value="Add new Ride" />
                            </div>
                        </div>
                    </div>
                    @*</div>*@
                </div>
            </div>

        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "dd/MM/yy",
                minDate: "today",
                changeMonth: true,
                changeYear: true,
                yearRange: "-1:+1"
                //showOn: "both",
                //buttonText: "<i class='fa fa-calender'></i>"
            });
        });
    </script>
}
